  "main": "dist/index.js",
  "scripts": {
    "start:dev": "nodemon",
    "start": "npm run build && pm2 start ./dist/server.js --name ngmp-4-network-app",
    "stop": "pm2 stop ngmp-4-network-app",
    "start:old": "npm run build && ./node_modules/.bin/pm2 start ./dist/server.js --name ngmp-4-network-app",
    "stop:old": "./node_modules/.bin/pm2 stop ngmp-4-network-app",
    "build": "tsc",
    "test": "jest --reporters=jest-junit --coverage",
    "test:coverage": "jest --coverage",
    "coverage": "jest --coverage --coverageReporters=cobertura --coverageDirectory=.",
    "pretest": "npm start",
    "posttest": "npm stop"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.14.9",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.7",
    "pm2": "^5.3.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.3"
  }
}
